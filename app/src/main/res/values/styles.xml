<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto</item>

        <item name="android:textColorHint">@color/colorLightHint</item>
        <item name="colorControlNormal">@color/colorBlack</item>

        <!-- shadows -->
        <item name="android:ambientShadowAlpha">0.3</item>
        <item name="android:spotShadowAlpha">0.7</item>
    </style>

    <style name="AppNameText" parent="@style/AppTheme">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_horizontal|top</item>
        <item name="android:textSize">38sp</item>
    </style>

    <!-- Font sizes -->
    <style name="SmallText" parent="@style/AppTheme">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="RegularText" parent="@style/AppTheme">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MediumText" parent="@style/AppTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="LargeText" parent="@style/AppTheme">
        <item name="android:textSize">18sp</item>
    </style>


    <!-- Font styles -->
    <style name="DarkHintText" parent="@style/RegularText">
        <item name="android:textColor">@color/colorDarkHint</item>
    </style>
    <style name="LightHintText" parent="@style/RegularText">
        <item name="android:textColor">@color/colorLightHint</item>
    </style>

    <style name="ButtonText" parent="@style/RegularText">
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>
    <style name="MediumButtonText" parent="@style/MediumText">
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>

    <style name="DarkText" parent="@style/RegularText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="LargeDarkText" parent="@style/LargeText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="XLargeText" parent="@style/AppTheme">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RegularWhiteText" parent="@style/RegularText">
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>
    <style name="MediumWhiteText" parent="@style/MediumText">
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>

    <!-- drop card text styles -->
    <style name="CardMessageBodyText" parent="@style/MediumText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="CardMessageSubText" parent="@style/RegularText">
        <item name="android:textColor">@color/colorLightSubText</item>
    </style>
    <style name="CardVotesText" parent="@style/LargeText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/colorLightHint</item>
    </style>
    <style name="CardLabelText" parent="@style/LargeText">
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="CardAuthorText" parent="@style/XLargeText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MediumDarkText" parent="@style/MediumText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="error_text" parent="@style/SmallText">
        <item name="android:textColor">@color/colorError</item>
    </style>



    <!-- buttons -->
    <style name="nav_button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:capitalize">words</item>
        <item name="android:textColor">@color/colorWhiteText</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:scaleX">1</item>
        <item name="android:scaleY">1</item>
        <item name="android:drawablePadding">-5dp</item>
    </style>

    <!-- TODO hook up with toolbar style -->
    <style name="ToolBarTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorWhiteText</item>
    </style>
</resources>
