<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- card holder background -->
    <item>
        <shape>
            <solid android:color="@color/colorPrimary"/>
            <corners android:radius="8dp"/>
            <padding android:bottom="70dp"/>
        </shape>
    </item>

    <!-- card holder line -->
    <item android:gravity="bottom">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#333333" />
            <size android:height="2dp" />
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="1dp" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#80333333" />
            <size android:height="2dp" />
            <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="1dp" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#60333333" />
            <size android:height="2dp" />
            <padding android:left="0dp" android:top="1dp" android:right="0dp" android:bottom="1dp" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#40333333" />
            <size android:height="2dp" />
            <padding android:left="0dp" android:top="1dp" android:right="0dp" android:bottom="1dp" />
        </shape>
    </item>
    <item android:gravity="bottom">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#20333333" />
            <size android:height="2dp" />
            <padding android:left="7dp" android:top="7dp" android:right="7dp" android:bottom="0dp" />
        </shape>
    </item>

    <!-- White card on top -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorWhite"/>
        </shape>
    </item>



</layer-list>